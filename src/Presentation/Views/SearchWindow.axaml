<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BerryAIGC.Toolkit.ViewModels"
        x:Class="BerryAIGC.Toolkit.Views.SearchWindow"
        Title="Search"
        Width="800"
        Height="600"
        Icon="/Assets/berry-aigc-toolbox.ico">

    <Design.DataContext>
        <vm:SearchViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="20">
            <StackPanel Spacing="10">
                <TextBlock Text="Search" FontSize="24" FontWeight="Bold"/>
                <TextBox Text="{Binding SearchText}" Watermark="Search images..." Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                    <CheckBox Content="Case sensitive" IsChecked="{Binding CaseSensitive}"/>
                    <CheckBox Content="Include filename" IsChecked="{Binding IncludeFilename}"/>
                    <CheckBox Content="Include tags" IsChecked="{Binding IncludeTags}"/>
                </StackPanel>
                <Button Content="Search" Command="{Binding SearchCommand}" HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Results}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="10">
                            <StackPanel Spacing="5">
                                <TextBlock Text="{Binding FileName}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding FilePath}" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding FileSize}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
