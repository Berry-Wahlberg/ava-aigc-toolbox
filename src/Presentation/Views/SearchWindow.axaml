<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:BerryAIGC.Toolkit.ViewModels"
        x:Class="BerryAIGC.Toolkit.Views.SearchWindow"
        Title="Search"
        Width="800"
        Height="600"
        MinWidth="600"
        MinHeight="400"
        Icon="/Assets/berry-aigc-toolbox.ico">

    <Design.DataContext>
        <vm:SearchViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{DynamicResource Theme.Background}" Padding="20">
            <StackPanel Spacing="10">
                <TextBlock Text="Search" Classes="PageTitle" FontSize="24" FontWeight="Bold"/>
                <TextBox Text="{Binding SearchText, Mode=TwoWay}" Watermark="Search images..." Classes="SearchBox" Margin="0,10,0,20,0"/>
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                    <CheckBox Content="Case sensitive" IsChecked="{Binding CaseSensitive}" Classes="FilterCheckBox"/>
                    <CheckBox Content="Include filename" IsChecked="{Binding IncludeFilename}" Classes="FilterCheckBox"/>
                    <CheckBox Content="Include tags" IsChecked="{Binding IncludeTags}" Classes="FilterCheckBox"/>
                </StackPanel>
                <Button Content="Search" Command="{Binding SearchCommand}" Classes="PrimaryButton" HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="{DynamicResource Theme.Background}">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Results}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Classes="ResultItem" Margin="5" Background="{DynamicResource Theme.CardBackground}" BorderBrush="{DynamicResource Theme.BorderBrush}">
                                <Grid RowDefinitions="Auto,Auto">
                                    <Image Source="{Binding Thumbnail}" Width="80" Height="80" Stretch="UniformToFill" Margin="10"/>
                                    <StackPanel Grid.Row="1" Margin="10,10,0,0">
                                        <TextBlock Text="{Binding FileName}" Classes="ResultFileName" TextWrapping="Wrap" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding FilePath}" Classes="ResultPath" TextWrapping="Wrap" Foreground="{DynamicResource Theme.SecondaryForeground}"/>
                                        <TextBlock Text="{Binding FileSize}" Classes="ResultMeta" Foreground="{DynamicResource Theme.SecondaryForeground}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

    <Window.Styles>
        <Style Selector="TextBlock.PageTitle">
            <Setter Property="Foreground" Value="{DynamicResource Theme.Foreground}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,20,0"/>
        </Style>
        <Style Selector="TextBox.SearchBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="35"/>
        </Style>
        <Style Selector="CheckBox.FilterCheckBox">
            <Setter Property="Margin" Value="5,0"/>
        </Style>
        <Style Selector="Button.PrimaryButton">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style Selector="Border.ResultItem">
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style Selector="Border.ResultItem:pointerover /template/Control/">
            <Setter Property="Background" Value="{DynamicResource Theme.CardHover}"/>
        </Style>
        <Style Selector="TextBlock.ResultFileName">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="TextBlock.ResultPath, TextBlock.ResultMeta">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource Theme.SecondaryForeground}"/>
        </Style>
    </Window.Styles>
</Window>
