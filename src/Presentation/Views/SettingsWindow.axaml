<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BerryAIGC.Toolkit.ViewModels"
        x:Class="BerryAIGC.Toolkit.Views.SettingsWindow"
        Title="Settings"
        Width="800"
        Height="700"
        Icon="/Assets/berry-aigc-toolbox.ico">

    <Design.DataContext>
        <vm:SettingsViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="20">
            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold"/>
        </Border>

        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20" Margin="20">
                <TextBlock Text="Appearance" FontSize="18" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                    <TextBlock Text="Theme:" Width="120"/>
                    <ComboBox SelectedIndex="{Binding ThemeIndex}">
                        <ComboBoxItem>Light</ComboBoxItem>
                        <ComboBoxItem>Dark</ComboBoxItem>
                        <ComboBoxItem>System</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                
                <TextBlock Text="Thumbnail Size:" Width="120" Margin="0,20,0,0"/>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <RadioButton Content="Small"/>
                    <RadioButton Content="Medium"/>
                    <RadioButton Content="Large"/>
                </StackPanel>

                <TextBlock Text="View Mode:" Width="120" Margin="0,20,0,0"/>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <RadioButton Content="Grid"/>
                    <RadioButton Content="List"/>
                </StackPanel>

                <TextBlock Text="Display Options:" FontSize="18" FontWeight="SemiBold" Margin="0,20,0,0"/>
                <StackPanel Spacing="10">
                    <CheckBox Content="Show filenames" IsChecked="{Binding ShowFilenames}"/>
                    <CheckBox Content="Show tags" IsChecked="{Binding ShowTags}"/>
                    <CheckBox Content="Show metadata" IsChecked="{Binding ShowMetadata}"/>
                </StackPanel>

                <Button Content="Save" Command="{Binding SaveCommand}" HorizontalAlignment="Right" Margin="0,20,0,0" MinWidth="100"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
