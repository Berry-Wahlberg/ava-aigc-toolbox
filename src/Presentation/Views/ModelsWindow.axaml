<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BerryAIGC.Toolkit.ViewModels"
        x:Class="BerryAIGC.Toolkit.Views.ModelsWindow"
        Title="Models"
        Width="800"
        Height="600"
        Icon="/Assets/berry-aigc-toolbox.ico">

    <Design.DataContext>
        <vm:ModelsViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="20">
            <TextBlock Text="AI Models" FontSize="24" FontWeight="Bold"/>
        </Border>

        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Models}">
                <ItemsControl.ItemsPanel>
                    <WrapPanel Orientation="Horizontal" ItemWidth="200"/>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" Padding="10">
                            <StackPanel Spacing="10">
                                <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" MaxLines="3" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding ModelType}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
