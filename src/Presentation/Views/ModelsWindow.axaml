<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:BerryAIGC.Toolkit.ViewModels"
        x:Class="BerryAIGC.Toolkit.Views.ModelsWindow"
        Title="Models"
        Width="800"
        Height="600"
        MinWidth="600"
        MinHeight="400"
        Icon="/Assets/berry-aigc-toolbox.ico">

    <Design.DataContext>
        <vm:ModelsViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{DynamicResource Theme.Background}" Padding="20">
            <TextBlock Text="AI Models" Classes="PageTitle" FontSize="24" FontWeight="Bold" Margin="0,0,20,0"/>
        </Border>

        <Border Grid.Row="1" Background="{DynamicResource Theme.Background}">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Models}">
                    <ItemsControl.ItemsPanel>
                        <WrapPanel Orientation="Horizontal" ItemWidth="200"/>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Classes="ModelCard" Margin="10" Background="{DynamicResource Theme.CardBackground}" BorderBrush="{DynamicResource Theme.BorderBrush}">
                                <Grid RowDefinitions="Auto,Auto">
                                    <Image Source="{Binding Thumbnail}" Width="180" Height="180" Stretch="UniformToFill" Margin="10"/>
                                    <StackPanel Grid.Row="1" Margin="10,0,0,10">
                                        <TextBlock Text="{Binding Name}" Classes="ModelName" FontSize="18" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Description}" Classes="ModelDescription" TextWrapping="Wrap" MaxLines="3" Margin="0,5,0"/>
                                        <TextBlock Text="{Binding ModelType}" Classes="ModelMeta" Foreground="{DynamicResource Theme.SecondaryForeground}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

    <Window.Styles>
        <Style Selector="TextBlock.PageTitle">
            <Setter Property="Foreground" Value="{DynamicResource Theme.Foreground}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,20,0"/>
        </Style>
        <Style Selector="Border.ModelCard">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style Selector="Border.ModelCard:pointerover /template/Control/">
            <Setter Property="Background" Value="{DynamicResource Theme.CardHover}"/>
        </Style>
        <Style Selector="TextBlock.ModelName">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style Selector="TextBlock.ModelDescription">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style Selector="TextBlock.ModelMeta">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource Theme.SecondaryForeground}"/>
        </Style>
    </Window.Styles>
</Window>
