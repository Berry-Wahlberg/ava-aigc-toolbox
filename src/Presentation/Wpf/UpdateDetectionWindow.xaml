<Window x:Class="BerryAIGen.Toolkit.UpdateDetectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BerryAIGen.Toolkit"
        mc:Ignorable="d"
        Title="Update Detection"
        Height="300"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        Background="{StaticResource Background}"
        Foreground="{StaticResource Foreground}">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20,10"/>
        </Style>
    </Window.Resources>
    <Grid>
        <!-- Background gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource Focused}" Offset="0"/>
                <GradientStop Color="{StaticResource Highlight}" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <!-- Content container -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="90%">
            <!-- Title -->
            <TextBlock Text="AIGenManager" 
                       HorizontalAlignment="Center" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="White" 
                       Margin="0,0,0,20"/>
            
            <!-- Progress indicator -->
            <StackPanel HorizontalAlignment="Center" Margin="0,20">
                <ProgressBar IsIndeterminate="True" Width="160" Height="20" Foreground="White" Background="Transparent" BorderBrush="White" BorderThickness="1"/>
                <TextBlock x:Name="ProgressText" 
                           Text="Checking for updates..." 
                           HorizontalAlignment="Center" 
                           Foreground="White" 
                           FontSize="16" 
                           Margin="0,10"/>
            </StackPanel>
            
            <!-- Timeout message (initially hidden) -->
            <StackPanel x:Name="TimeoutPanel" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,20">
                <TextBlock Text="Update check timed out" 
                           HorizontalAlignment="Center" 
                           Foreground="White" 
                           FontSize="16"/>
                <TextBlock Text="Would you like to retry?" 
                           HorizontalAlignment="Center" 
                           Foreground="White" 
                           FontSize="14" 
                           Margin="0,5"/>
            </StackPanel>
            
            <!-- Button container -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40">
                <!-- Skip Detection button -->
                <Button x:Name="SkipButton" 
                        Content="Skip Detection" 
                        Click="SkipButton_Click" 
                        Background="{StaticResource HighlightBrush}" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        MinWidth="150"/>
                
                <!-- Retry button (initially hidden) -->
                <Button x:Name="RetryButton" 
                        Content="Retry" 
                        Click="RetryButton_Click" 
                        Visibility="Collapsed" 
                        MinWidth="150"/>
                
                <!-- Cancel button (initially hidden) -->
                <Button x:Name="CancelButton" 
                        Content="Cancel" 
                        Click="CancelButton_Click" 
                        Visibility="Collapsed" 
                        Background="{StaticResource ToastBrush}" 
                        Foreground="White" 
                        MinWidth="150"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
