<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{DynamicResource PrimaryLight}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{DynamicResource PrimaryDark}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{DynamicResource Secondary}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource Accent}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{DynamicResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{DynamicResource Warning}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{DynamicResource Error}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{DynamicResource Info}"/>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource Background}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{DynamicResource Surface}"/>
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="{DynamicResource SurfaceVariant}"/>
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="{DynamicResource OnBackground}"/>
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{DynamicResource OnSurface}"/>
    <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="{DynamicResource OnSurfaceVariant}"/>

    <SolidColorBrush x:Key="OutlineBrush" Color="{DynamicResource Outline}"/>
    <SolidColorBrush x:Key="OutlineVariantBrush" Color="{DynamicResource OutlineVariant}"/>

    <SolidColorBrush x:Key="DisabledBrush" Color="{DynamicResource Disabled}"/>
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="{DynamicResource DisabledBackground}"/>

    <SolidColorBrush x:Key="HoverBrush" Color="{DynamicResource Hover}"/>
    <SolidColorBrush x:Key="PressedBrush" Color="{DynamicResource Pressed}"/>
    <SolidColorBrush x:Key="FocusedBrush" Color="{DynamicResource Focused}"/>

    <SolidColorBrush x:Key="OverlayBrush" Color="{DynamicResource Overlay}"/>
    <SolidColorBrush x:Key="ShadowBrush" Color="{DynamicResource Shadow}"/>

</ResourceDictionary>
