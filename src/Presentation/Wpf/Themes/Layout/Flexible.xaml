<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="FlexibleColumnLayout" TargetType="Grid">
        <Setter Property="Margin" Value="{StaticResource MarginM}"/>
    </Style>

    <Style x:Key="TwoColumnLayout" TargetType="Grid">
        <Setter Property="Margin" Value="{StaticResource MarginM}"/>
    </Style>

    <Style x:Key="ThreeColumnLayout" TargetType="Grid">
        <Setter Property="Margin" Value="{StaticResource MarginM}"/>
    </Style>

    <Style x:Key="FlexibleRowLayout" TargetType="StackPanel">
        <Setter Property="Margin" Value="{StaticResource MarginM}"/>
        <Setter Property="Orientation" Value="Vertical"/>
    </Style>

    <Style x:Key="HorizontalFlexLayout" TargetType="StackPanel">
        <Setter Property="Margin" Value="{StaticResource MarginM}"/>
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>

</ResourceDictionary>
