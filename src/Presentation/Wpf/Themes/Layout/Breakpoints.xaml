<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Double x:Key="BreakpointXS">480</sys:Double>
    <sys:Double x:Key="BreakpointS">768</sys:Double>
    <sys:Double x:Key="BreakpointM">1024</sys:Double>
    <sys:Double x:Key="BreakpointL">1280</sys:Double>
    <sys:Double x:Key="BreakpointXL">1600</sys:Double>

    <Style x:Key="ResponsiveContainerStyle" TargetType="Grid">
        <Setter Property="Margin" Value="{StaticResource MarginM}"/>
    </Style>

    <Style x:Key="CompactContainerStyle" TargetType="Grid">
        <Setter Property="Margin" Value="{StaticResource MarginS}"/>
    </Style>

    <Style x:Key="SpaciousContainerStyle" TargetType="Grid">
        <Setter Property="Margin" Value="{StaticResource MarginXL}"/>
    </Style>

    <Style x:Key="ResponsiveColumnStyle" TargetType="ColumnDefinition">
        <Setter Property="Width" Value="*"/>
    </Style>

    <Style x:Key="ResponsiveRowStyle" TargetType="RowDefinition">
        <Setter Property="Height" Value="Auto"/>
    </Style>

</ResourceDictionary>
