<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ResponsiveGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="{StaticResource MarginM}"/>
    </Style>

    <Style x:Key="CompactLayoutStyle" TargetType="Panel">
        <Setter Property="Margin" Value="{StaticResource MarginS}"/>
    </Style>

    <Style x:Key="ComfortableLayoutStyle" TargetType="Panel">
        <Setter Property="Margin" Value="{StaticResource MarginL}"/>
    </Style>

    <Style x:Key="SpaciousLayoutStyle" TargetType="Panel">
        <Setter Property="Margin" Value="{StaticResource MarginXL}"/>
    </Style>

</ResourceDictionary>
