<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Double x:Key="SpacingXS">4</sys:Double>
    <sys:Double x:Key="SpacingS">8</sys:Double>
    <sys:Double x:Key="SpacingM">16</sys:Double>
    <sys:Double x:Key="SpacingL">24</sys:Double>
    <sys:Double x:Key="SpacingXL">32</sys:Double>
    <sys:Double x:Key="SpacingXXL">48</sys:Double>
    <sys:Double x:Key="SpacingXXXL">64</sys:Double>

    <Thickness x:Key="PaddingXS">4</Thickness>
    <Thickness x:Key="PaddingS">8</Thickness>
    <Thickness x:Key="PaddingM">12</Thickness>
    <Thickness x:Key="PaddingL">16</Thickness>
    <Thickness x:Key="PaddingXL">20</Thickness>
    <Thickness x:Key="PaddingXXL">24</Thickness>

    <Thickness x:Key="MarginXS">4</Thickness>
    <Thickness x:Key="MarginS">8</Thickness>
    <Thickness x:Key="MarginM">12</Thickness>
    <Thickness x:Key="MarginL">16</Thickness>
    <Thickness x:Key="MarginXL">20</Thickness>
    <Thickness x:Key="MarginXXL">24</Thickness>

    <CornerRadius x:Key="CornerRadiusXS">2</CornerRadius>
    <CornerRadius x:Key="CornerRadiusS">4</CornerRadius>
    <CornerRadius x:Key="CornerRadiusM">8</CornerRadius>
    <CornerRadius x:Key="CornerRadiusL">12</CornerRadius>
    <CornerRadius x:Key="CornerRadiusXL">16</CornerRadius>
    <CornerRadius x:Key="CornerRadiusPill">999</CornerRadius>

    <sys:Double x:Key="BorderThicknessThin">1</sys:Double>
    <sys:Double x:Key="BorderThicknessMedium">2</sys:Double>
    <sys:Double x:Key="BorderThicknessThick">3</sys:Double>

</ResourceDictionary>
