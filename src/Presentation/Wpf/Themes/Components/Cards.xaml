<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusM}"/>
        <Setter Property="Padding" Value="{StaticResource PaddingL}"/>
        <Setter Property="Effect" Value="{StaticResource ShadowS}"/>
    </Style>

    <Style x:Key="CardElevatedStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
        <Setter Property="Effect" Value="{StaticResource ShadowM}"/>
        <Setter Property="Margin" Value="{StaticResource MarginS}"/>
    </Style>

    <Style x:Key="CardOutlinedStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
        <Setter Property="BorderBrush" Value="{DynamicResource OutlineBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource BorderThicknessThin}"/>
        <Setter Property="Effect" Value="{x:Null}"/>
    </Style>

    <Style x:Key="PanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SurfaceVariantBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusL}"/>
        <Setter Property="Padding" Value="{StaticResource PaddingXL}"/>
    </Style>

    <Style x:Key="DividerStyle" TargetType="Separator">
        <Setter Property="Background" Value="{DynamicResource OutlineBrush}"/>
        <Setter Property="Margin" Value="{StaticResource MarginM}"/>
    </Style>

</ResourceDictionary>
