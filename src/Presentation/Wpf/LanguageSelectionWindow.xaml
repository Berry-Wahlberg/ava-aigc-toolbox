<local:BorderlessWindow x:Class="BerryAIGen.Toolkit.LanguageSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BerryAIGen.Toolkit"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        xmlns:converters="clr-namespace:BerryAIGen.Toolkit.Converters"
        lex:LocalizeDictionary.Provider="{StaticResource LocalizationProvider}"
        lex:LocalizeDictionary.Separation="."
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Language Selection"
        Height="400"
        Width="600">
    <Window.Resources>
        <ResourceDictionary>
            <!-- BoolToBrushConverter is used for styling selected list items -->
            <converters:BoolToBrushConverter x:Key="HighlightBrushConverter" TrueBrush="{DynamicResource HighlightBrush}"/>
            <converters:BoolToBrushConverter x:Key="FocusedBrushConverter" TrueBrush="{DynamicResource FocusedBrush}"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{DynamicResource PrimaryBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <Label Content="Select Language" FontSize="24" FontWeight="Bold" Margin="0,0,0,30" Foreground="{DynamicResource ForegroundBrush}"/>
            <ListBox SelectionMode="Single"
                     Name="LanguageList"
                     ItemsSource="{Binding SupportedLanguages}"
                     SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                     Height="250"
                     Width="350"
                     Background="{DynamicResource ControlBackgroundBrush}"
                     BorderBrush="{DynamicResource SplitterBrush}"
                     Foreground="{DynamicResource ForegroundBrush}"
                     HorizontalContentAlignment="Stretch"
                     VerticalContentAlignment="Center"
                     BorderThickness="1"
                     Padding="5">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10,12,10,12" Margin="2,2,2,2" CornerRadius="4"
                                Background="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected, Converter={StaticResource HighlightBrushConverter}}"
                                BorderThickness="1"
                                BorderBrush="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected, Converter={StaticResource FocusedBrushConverter}}">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       Foreground="{DynamicResource ForegroundBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding}" Value="en-US">
                                                <Setter Property="Text" Value="English"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding}" Value="zh-CN">
                                                <Setter Property="Text" Value="简体中文"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding}" Value="zh-TW">
                                                <Setter Property="Text" Value="繁体中文"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding}" Value="de-DE">
                                                <Setter Property="Text" Value="Deutsch"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding}" Value="fr-FR">
                                                <Setter Property="Text" Value="Français"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding}" Value="es-ES">
                                                <Setter Property="Text" Value="Español"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding}" Value="ja-JP">
                                                <Setter Property="Text" Value="日本語"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding}" Value="uk-UA">
                                                <Setter Property="Text" Value="Українська"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </StackPanel>
        
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,20,0,20">
            <Button x:Name="AcceptButton" Click="Continue_OnClick" Width="120" Height="36" Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Content" Value="OK"/>
                        <Setter Property="Background" Value="{DynamicResource HighlightBrush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource HighlightBrush}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="Medium"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HighlightFocusedBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource HighlightFocusedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource FocusedBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource FocusedBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</local:BorderlessWindow>
